<% if @user.errors.any? %>
  <div class="error_display">
    <ul class="errors_list">
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model:@user,local:true) do |form| %>
  <p><%= form.label :name %><%= form.text_field :name %></p>
  <p><%= form.label :email %><%= form.text_field :email %></p>
  <p><%= form.label :password %><%= form.text_field :password %></p>
  <p><%= form.label :password_confirmation %><%= form.text_field :password_confirmation %></p>
  <p><%= form.submit %></p>
<% end %>
